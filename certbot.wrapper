#!/bin/sh

join() {
    sep=$1
    first=$2
    shift 2
    echo -n "${first}"
    for item in "$@"; do echo -n "${sep}${item}"; done
    echo
}

paths=$(for plugin_snap in $(snap connections certbot|sed -n '2,$p'|awk '$1=="content[certbot-plugin]"{print $3}'|cut -d: -f1); do echo /snap/$plugin_snap/current/lib/python2.7/site-packages; done)
export CERTBOT_PLUGIN_PATH=$(join : $paths)
exec certbot "$@"
